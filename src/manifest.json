{
  "manifest_version": 3,
  "name": "VTab – Vertical Tabs Side Panel",
  "version": "0.1.0",
  "description": "Chrome のサイドパネルに現在のウィンドウのタブを縦に一覧表示し、クリックで素早く切り替えできる拡張機能です。",
  "permissions": ["tabs", "sidePanel"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "VTab"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
